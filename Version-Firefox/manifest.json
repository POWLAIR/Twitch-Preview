{
  "manifest_version": 3,
  "name": "Twitch Preview",
  "version": "1.2.1",
  "description": "Prévisualisez les streams Twitch de vos chaînes suivies",
  "browser_specific_settings": {
    "gecko": {
      "id": "{27c3ab93-b691-4ea7-81f2-7fe7719069e5}",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "src/assets/icons/icon-16.png",
    "48": "src/assets/icons/icon-48.png",
    "128": "src/assets/icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://api.twitch.tv/*",
    "https://id.twitch.tv/*",
    "https://twitch-preview.vercel.app/*",
    "https://embed.twitch.tv/*",
    "https://player.twitch.tv/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Twitch Preview",
    "default_icon": {
      "16": "src/assets/icons/icon-16.png",
      "48": "src/assets/icons/icon-48.png",
      "128": "src/assets/icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "src/background/background-firefox.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/auth/auth.html",
        "src/options/options.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src https://api.twitch.tv https://id.twitch.tv https://twitch-preview.vercel.app; img-src 'self' https://static-cdn.jtvnw.net data:; script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'self'; frame-src https://player.twitch.tv https://*.twitch.tv https://embed.twitch.tv"
  }
}